package classes.utils {	import com.soenkerohde.logging.SOSLogger;			/**	 * @author Felix Gertz, BM8 GmbH	 * 	 * Please call Logger.init(true) once in a class (Mainclass), before start with logging.	 * 	 */	public class Logger	{		private static var initiated : Boolean = false;		private static var turnedon : Boolean = false;		private var _log : SOSLogger;		// Initialisation		public static function init(turned_on : Boolean) : void		{			if(!initiated)				turnedon = turned_on;		}		// Constructor		public function Logger(prefix : String)		{			if(Logger.turnedon)				_log = new SOSLogger(prefix);		}				// Methods		public function info(msg : String) : void		{			if(Logger.turnedon)				_log.info(msg);		}				public function debug(msg : String) : void		{			if(Logger.turnedon)				_log.debug(msg);		}				public function error(msg : String) : void		{			if(Logger.turnedon)				_log.error(msg);		}				public function fatal(msg : String) : void		{			if(Logger.turnedon)				_log.fatal(msg);		}				public function warn(msg : String) : void		{			if(Logger.turnedon)				_log.warn(msg);		}	}}